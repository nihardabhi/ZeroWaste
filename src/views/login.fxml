<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController">
   
   <Label text="ZeroWaste">
      <font>
         <Font name="System Bold" size="36.0" />
      </font>
   </Label>
   
   <ScrollPane fitToWidth="true" maxHeight="400.0">
      <content>
         <HBox alignment="CENTER" spacing="20.0">
            <!-- Login Section -->
            <VBox alignment="CENTER" spacing="10.0" minWidth="200.0" maxWidth="300.0">
               <Label text="Sign In">
                  <font><Font size="18.0" /></font>
               </Label>
               <TextField fx:id="loginUsername" promptText="Username" maxWidth="Infinity" />
               <PasswordField fx:id="loginPassword" promptText="Password" maxWidth="Infinity" />
               <Button fx:id="loginBtn" text="Login" prefWidth="100.0" />
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            
            <Separator orientation="VERTICAL" />
            
            <!-- Sign Up Section -->
            <VBox alignment="CENTER" spacing="10.0" minWidth="200.0" maxWidth="300.0">
               <Label text="Sign Up">
                  <font><Font size="18.0" /></font>
               </Label>
               <TextField fx:id="signupFirstName" promptText="First name" maxWidth="Infinity" />
               <TextField fx:id="signupLastName" promptText="Last name" maxWidth="Infinity" />
               <TextField fx:id="signupEmail" promptText="Email address" maxWidth="Infinity" />
               <TextField fx:id="signupUsername" promptText="Username" maxWidth="Infinity" />
               <PasswordField fx:id="signupPassword" promptText="Password" maxWidth="Infinity" />
               <Button fx:id="signupBtn" text="Sign Up" prefWidth="100.0" />
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </HBox>
      </content>
   </ScrollPane>
   
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>