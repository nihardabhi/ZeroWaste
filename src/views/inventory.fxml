<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.InventoryController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" percentWidth="25" />
               <ColumnConstraints hgrow="SOMETIMES" percentWidth="25" />
               <ColumnConstraints hgrow="SOMETIMES" percentWidth="25" />
               <ColumnConstraints hgrow="SOMETIMES" percentWidth="25" />
            </columnConstraints>
            
            <VBox GridPane.columnIndex="0">
               <Label text="Item Name" />
               <TextField fx:id="itemNameField" maxWidth="Infinity" />
            </VBox>
            
            <VBox GridPane.columnIndex="1">
               <Label text="Measurement Type" />
               <ComboBox fx:id="measurementTypeCombo" maxWidth="Infinity" />
            </VBox>
            
            <VBox GridPane.columnIndex="2">
               <Label text="Quantity" />
               <TextField fx:id="quantityField" maxWidth="Infinity" />
            </VBox>
            
            <VBox GridPane.columnIndex="3">
               <Label text="Expiry Date" />
               <DatePicker fx:id="expiryDatePicker" maxWidth="Infinity" />
            </VBox>
         </GridPane>
         
         <HBox spacing="10.0" alignment="CENTER">
            <Button fx:id="addButton" text="Add" prefWidth="100.0" />
            <Button fx:id="updateButton" text="Update" prefWidth="100.0" />
            <Button fx:id="removeButton" text="Remove" prefWidth="100.0" />
         </HBox>
         
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
            <TableColumn fx:id="nameColumn" text="Item Name" prefWidth="200.0" />
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="150.0" />
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100.0" />
            <TableColumn fx:id="expiryColumn" text="Expiry Date" prefWidth="150.0" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>